{
  "name": "bettersmp-bot",
  "version": "4.0.0",
  "description": "Production-ready Minecraft bot for 24/7 server activity and player assistance - stable, lightweight, and fully automated",
  "main": "index.js",
  "scripts": {
    "start": "node bot-enhanced.js",
    "enhanced": "node bot-enhanced.js",
    "setup": "node auto-setup.js",
    "config": "node quick-config.js",
    "dev": "node index.js",
    "pm2": "pm2 start ecosystem.config.js",
    "pm2:enhanced": "pm2 start ecosystem.config.js --only bot-enhanced",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 list",
    "test": "node -e \"require('./index.js')\"",
    "validate": "node -e \"require('./config/settings.json'); console.log('Config valid');\""
  },
  "keywords": [
    "minecraft",
    "bot",
    "mineflayer",
    "server",
    "smp",
    "activity",
    "lightweight",
    "24/7",
    "admin-helper",
    "auto-reconnect",
    "stable",
    "production-ready"
  ],
